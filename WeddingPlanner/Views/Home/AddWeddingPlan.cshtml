@using System
@using System.Collections.Generic
@using WeddingPlanner.Models
@model WeddingPlan
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Index</title>
        <link rel="stylesheet" href="~/css/style.css"/>
    </head>
    <body>
        <h1>Plan Your Wedding</h1>
        <a href="/Dashboard">Dashboard</a>
        <a href="/">Log out</a>
        <form asp-action="Process_newplan" asp-controller="Home" method="post">
            <span asp-validation-for="WedderOne"></span>
            <label>Wedder One</label>
            <input asp-for="WedderOne" type="text">
            <span asp-validation-for="WedderTwo"></span>
            <label>Wedder Two</label>
            <input asp-for="WedderTwo" type="text">
            <span asp-validation-for="Date"></span>
            <label>Date</label>
            <input asp-for="Date" type="date">
            <span asp-validation-for="Address"></span>
            <label>Address</label>
            <input asp-for="Address" type="text">

            <input type="submit" value="Create">
        </form>

    </body>
</html>
